<%# Struktur übernommen aus "Ruby on Rails Tutorial" von Michael Hartl%>
<header>
  <% if signed_in? %>
  <%= link_to logo, problems_path %>
  <% else %>
  <%= link_to logo, root_path %>
  <% end %>
  <nav class="round">
    <ul>
      <% if signed_in? %>
      <li><%= link_to "Problemübersicht", problems_path %> </li>
      <li><%= link_to 'Lösungsübersicht', solutions_path%>   </li>
      <li><%= link_to "Abmelden", signout_path, :method => :delete %></li>
      <% else %>
      <li><%= link_to "Startseite", root_path %></li>
      <li><%= link_to "Anmelden", signin_path %></li>
      <% end %>


    </ul>
  </nav>

  <nav class="round">
    <ul>
      <% if signed_in? %>
          <%if $current_problem==nil%>
          <%else%>
          <li><%= link_to "Aktuell geladenes Optimierungsproblem: "+$current_problem.problemname, "/configurations/view" %> </li>
          <%end%>
      <% else %>
      <% end %>


    </ul>
  </nav>
</header>