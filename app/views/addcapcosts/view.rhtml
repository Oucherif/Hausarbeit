<%#Struktur 체bernommen aus http://www.dhtmlx.com/blog/?p=426%>

<% if signed_in? %>
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
    "http://www.w3.org/TR/html4/loose.dtd">
<html>
     <head>
         <%= render 'shared/grid_head' %>
     </head>
     <body>
         <div id="grid_here" style="width:600px; height:400px;">
         </div>
          <script type="text/javascript" charset="utf-8">
             var grid = new dhtmlXGridObject("grid_here");
             grid.setImagePath("/javascripts/codebase/imgs/");
             grid.setHeader("Zeitpunkt, Kosten einer zus채tzlichen Kapazit채tseinheit");
             grid.setColSorting("str,str");
             grid.setInitWidths("100,*");
             grid.setSkin("dhx_skyblue");
             grid.init();
             grid.load("/addcapcosts/data.xml");


             dp = new dataProcessor("/addcapcosts/dbaction.xml");
             dp.init(grid);
         </script>
         <%if Timestep.first==nil%> <%#wenn noch kein Eintrag vorhanden, dann gib Warnung%>
         Bitte definieren Sie zun채chst die Zeitpunkte!
         <%else%>
            <%if Addcapcost.last==nil%>
                <%#Gib alten Datenvorschlag und lade Seite nach 500ms neu%>
                <input type="button" value="Add" onclick="grid.addRow(grid.uid(),'<%=Timestep.first.stepnumber%>,0.0'); javascript:timedRefresh(500)">
                <input type="button" value="Delete" onclick="grid.deleteSelectedRows(); javascript:timedRefresh(500)">
            <%else%>
                <%if Timestep.find_by_id(Addcapcost.last.timestep_id).stepnumber+1>Timestep.all.count%>
                    <%#Gib alten Datenvorschlag und lade Seite nach 500ms neu%>
                    <input type="button" value="Add" onclick="grid.addRow(grid.uid(),'<%=Timestep.find_by_id(Addcapcost.last.timestep_id).stepnumber%>, <%=Addcapcost.last.addcapcostvalue%>'); javascript:timedRefresh(500)">
                    <input type="button" value="Delete" onclick="grid.deleteSelectedRows(); javascript:timedRefresh(500)">
                <%else%>
                    <%#Gib neuen Datenvorschlag und lade Seite nach 500ms neu%>
                    <input type="button" value="Add" onclick="grid.addRow(grid.uid(),'<%=Timestep.find_by_id(Addcapcost.last.timestep_id).stepnumber+1%>, <%=Addcapcost.last.addcapcostvalue%>'); javascript:timedRefresh(500)">
                    <input type="button" value="Delete" onclick="grid.deleteSelectedRows(); javascript:timedRefresh(500)">
                <%end%>
            <%end%>
         <%end%>
     </body>
</html>

<% else %>
<%= render 'shared/redirect_to_signin' %>
<% end %>